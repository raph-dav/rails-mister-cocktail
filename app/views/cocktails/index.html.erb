<div class="container">

  <h1>List of cocktails</h1>

<%= @cocktails.each do |cocktail| %>
    <div class="card-deck">
    <div class="card">
      <%= cl_image_tag("v7pichxay27vbhxfg5cb",
      width: 400, height: 300, crop: :fill) %>
    <div class="card-body">
      <p> <%= link_to "#{cocktail.name}", cocktail %> </p>
    </div>
    <div class="card-footer">
      <%= link_to "Go to cocktail description", cocktail, class: "btn btn-primary" %>
    </div>
</div>
</div>


<% end %>

<%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

